{
  "name": "tskeleton",
  "version": "1.0.0",
  "description": "a ts skeleton",
  "main": "dist/index.js",
  "repository": "git@github.com:bnbry/tskeleton.git",
  "author": "Matthew Banbury <mbanbury@gmail.com>",
  "license": "CC0-1.0",
  "private": false,
  "scripts": {
    "test": "jest",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist build",
    "build": "yarn clean && yarn build:dist",
    "build:dist": "esbuild src/index.ts --bundle --minify --sourcemap=external --outfile=dist/index.js",
    "build:dev": "esbuild src/index.ts --bundle --outfile=dist/index.js",
    "build:tsc": "tsc -p tsconfig.json",
    "build:watch": "esbuild src/index.ts --bundle --watch --outfile=dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "esbuild": "^0.14.49",
    "eslint": "^8.19.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.6",
    "typescript": "^4.7.4"
  }
}
